package database_connection;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import javax.swing.JOptionPane;

/**
 *
 * @author Adnan
 */
public class MR_Payment extends javax.swing.JFrame {

    /**
     * Creates new form MR_Payment
     */
    String input;
    public MR_Payment() {
        initComponents();
       //payment();
    }
 
  public String payment(){
      try{
            Class.forName("com.mysql.jdbc.Driver");
         Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","","");
        String query_ser="Select Payment_tk from mr_info where Id=?";
          PreparedStatement pst=con.prepareStatement(query_ser);
           pst.setString(1, jTextField1.getText());
           ResultSet rs=pst.executeQuery();
           while(rs.next()){
              String input=rs.getString("Payment_tk");
              jTextField3.setText(input);
           }
          System.out.println("Payment:"+input);
        }
        catch(Exception e){
        System.out.println("Error:"+e);
        }   
        //int pay=Integer.parseInt(input);
      String payment= jTextField3.getText();
      System.out.println("Payment_tk_sql:"+payment);
    return payment;
      
      
  }
    
