    }                                    

    private void CodeKeyReleased(java.awt.event.KeyEvent evt) {                                 
        try{
            Class.forName("com.mysql.jdbc.Driver");
            Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","","");
            //String queryIn="update stock set Product_name=?,Company=?,Quntity=?,Price=?,total_price=? where Id=?";
            String query_ser="Select MR_Name,Company,Phone,Address from mr_info where Id=?";
            PreparedStatement pst=con.prepareStatement(query_ser);
            pst.setString(1, Code.getText());
            ResultSet rs=pst.executeQuery();
            while(rs.next()){
                String input=rs.getString("MR_Name");
                P_name.setText(input);

                String input1=rs.getString("Company");
                Company.setText(input1);

                String input2=rs.getString("Phone");
                phone.setText(input2);

                String input3=rs.getString("Address");
                address.setText(input3);

            }

        }
        catch(Exception ex){
            System.out.println("Error:"+ex);
        }
    }                                

