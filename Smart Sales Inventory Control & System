/**
 *
 * @author Adnan
 */
public class SallInventory extends javax.swing.JFrame {

    /**
     * Creates new form SallInventory
     */
    int totalqun=0;
    int total_taka=0;
   // int convert_tk=0;
    public SallInventory() {
     
        initComponents();
        
        Display();
       // item_list();
    }
void Display(){
    
       try {
          Class.forName("com.mysql.jdbc.Driver");
         Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","","");
          Statement st = con.createStatement();
          
         // String query = "SELECT Id FROM STOCK WHERE Id LIKE '%" + jTextField1.getText() + "%'";
           String query="SELECT * FROM temp"; 
           ResultSet rs = st.executeQuery(query);
           ResultSetMetaData  rsmd =rs.getMetaData();
           int numeroColnumas=rsmd.getColumnCount();
           
           DefaultTableModel mod=new DefaultTableModel();
           this.jTable1.setModel(mod);
           for(int x=1;x<=numeroColnumas;x++){
              mod.addColumn(rsmd.getColumnLabel(x));
           }
           while(rs.next()){
              Object [] file= new Object[numeroColnumas];
                for(int y=0;y<numeroColnumas;y++){
                  file[y]=rs.getObject(y+1);
                }
                mod.addRow(file);
           }
           
   }
       catch(Exception ex){System.out.println("Error:"+ex);}
    }
    
