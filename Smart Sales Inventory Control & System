    private void loginActionPerformed(java.awt.event.ActionEvent evt) {                                      
    
    int ch;
        String logUser,logPass;
        logUser=U_Name.getText();
        logPass=U_Pass.getText();
        
       ch= Adminlog.Admin_login(logUser, logPass);
        if(ch==1){
             new ControlBroad().setVisible(true);
             this.setVisible(false);
              
        }
        else{
            JOptionPane.showMessageDialog(null, "Login Not Successfull");
        }
    }                                     

