package database_connection;

import java.sql.Connection;
import java.sql.DriverManager;
import javax.swing.JOptionPane;
import java.sql.*;
import javax.swing.JFrame;
import javax.swing.table.DefaultTableModel;

public class DataAdd extends javax.swing.JFrame {
    QueryProcess item=new QueryProcess() ;
    private int ch;
    String Qun;
    
    public DataAdd() {
        setExtendedState(JFrame.MAXIMIZED_HORIZ);
        setVisible(true);
        setResizable(false);
        setTitle("Product Add");
        initComponents();
        company();
        item_list();  
    }

    public void item_list(){
        try{
            Class.forName("com.mysql.jdbc.Driver");
            Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","",""); 
            String  lit_query="select * from item_catagory";
            PreparedStatement Stat=conn.prepareStatement(lit_query);
            ResultSet rs = Stat.executeQuery(lit_query);
            while(rs.next()){
            String com=rs.getString("item_list");
            jComboBox2.addItem(com);
         }
        }catch(Exception e){System.out.println("error:"+e);}
    }

    
   
  public void company(){
  try{
           Class.forName("com.mysql.jdbc.Driver");
           Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","",""); 
           String  lit_query="select * from company";
           PreparedStatement Stat=conn.prepareStatement(lit_query);
           ResultSet rs = Stat.executeQuery(lit_query);
           while(rs.next()){
           String com=rs.getString("Company");
           jComboBox1.addItem(com);
         }
        }catch(Exception e){System.out.println("error:"+e);}
  }  
    
