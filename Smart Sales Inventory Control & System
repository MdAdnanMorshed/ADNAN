    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String mr_id,mr_name,mr_company,mr_phone,mr_address;

         mr_id=Code.getText();
        mr_name=P_name.getText();
        mr_company=Company.getText();
        mr_phone= phone.getText();

        mr_address=address.getText();
       

        try {
            Class.forName("com.mysql.jdbc.Driver");
            Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","","");
            String queryIn="update mr_info set MR_Name=?,Company=?,Phone=?,Address=? where Id=?";

            PreparedStatement st=con.prepareStatement(queryIn);

            st.setString(1,mr_name);
            st.setString(2,mr_company);
            st.setString(3, mr_phone);
            st.setString(4, mr_address);
            st.setString(5, mr_id);

            st.executeUpdate();
            JOptionPane.showMessageDialog(null, "Data Updated Successfull!");
            this.setVisible(false);
        }
        catch(Exception ex){
            System.out.println("Error:"+ex);
        }

    }                                        

