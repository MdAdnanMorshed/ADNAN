    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        String Code,Pro_name,Company,Qun,Pri;
        
        Pro_name=jComboBox2.getItemAt(jComboBox2.getSelectedIndex());
        Company=jComboBox1.getItemAt(jComboBox1.getSelectedIndex());
        Qun=Quntity.getText();
        Pri=Price.getText();
             
        int  Quntity=Integer.parseInt(Qun); 
        int Price=Integer.parseInt(Pri); 
        int total=Quntity*Price;
        
        
        
        ch=item.Item_add(Pro_name,Company,Quntity,Price,total);
        if(ch==1){
        JOptionPane.showMessageDialog(null, "data Insert Successfull!");    
        }
        else{
         JOptionPane.showMessageDialog(null, "data Insert Not Successfull!");
        }
    }                                        

