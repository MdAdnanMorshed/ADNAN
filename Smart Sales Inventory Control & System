    private void jTextField1KeyReleased(java.awt.event.KeyEvent evt) {                                        
    try{
       
        Class.forName("com.mysql.jdbc.Driver");
         Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","","");
            //String queryIn="update stock set Product_name=?,Company=?,Quntity=?,Price=?,total_price=? where Id=?";
           String query_ser="Select Id,MR_Name,Company from mr_info where Id=?";
          PreparedStatement pst=con.prepareStatement(query_ser);
           pst.setString(1, jTextField1.getText());
           ResultSet rs=pst.executeQuery();
           while(rs.next()){
              String input=rs.getString("MR_Name");
               jTextField2.setText(input);
               
               String input1=rs.getString("Company");
               jTextField3.setText(input1);
           
           }
    
    }catch(Exception ex){
    System.out.println(ex);
    }
    
    finally{
    
    }    
    
    // TODO add your handling code here:
    }                                       

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    
        String Recive,company,pay_price,code;
        code=jTextField1.getText();
        Recive= jTextField5.getText();
        
        String pay_tk=recive();
        String MR_Payment=amount();
        
        int qun=Integer.parseInt(Recive);
         int qun1=Integer.parseInt(pay_tk);
         int payment=Integer.parseInt(MR_Payment);
         
         int total_recive=qun+qun1;
         int due=payment-total_recive;
        System.out.println("total_recive:"+total_recive );
        try {
           Class.forName("com.mysql.jdbc.Driver");
         Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","","");
            String queryIn="update mr_info set paid_tk=?,Due=? where Id=?";
         
            PreparedStatement st=con.prepareStatement(queryIn);
           
            st.setInt(1, total_recive);
            st.setInt(2, due);
           st.setString(3, code);
           
            st.executeUpdate();
          JOptionPane.showMessageDialog(null, "Data Updated Successfull!");
          this.setVisible(false);
        }
        catch(Exception ex){
         System.out.println("Error:"+ex);
        }

        // TODO add your handling code here:
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
      
        
        String code,pay_value;
        code=jTextField1.getText();
        pay_value= jTextField5.getText();
       
        
        String mr_pay=payment();
        String pay_tk=recive();
        
        
        int current_value=Integer.parseInt(pay_value);
        int pay=Integer.parseInt(mr_pay);
        int mrdue=Integer.parseInt(pay_tk);
          
         int total_pay=pay+current_value;
         
         int due=total_pay-mrdue;
      
        try {
           Class.forName("com.mysql.jdbc.Driver");
         Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","","");
            String queryIn="update mr_info set Payment_tk=?,Due=? where Id=?";
         
            PreparedStatement st=con.prepareStatement(queryIn);
           
            st.setInt(1, total_pay);
            st.setInt(2, due);
           st.setString(3, code);
           
            st.executeUpdate();
          JOptionPane.showMessageDialog(null, "Data Updated Successfull!");
          this.setVisible(false);
        }
        catch(Exception ex){
         System.out.println("Error:"+ex);
        }

        // TODO add your handling code here:
    
    }                                        

