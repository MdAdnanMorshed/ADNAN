    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        String MR_id,MR_name,MR_address,MR_phone,Company_data;
        int ch;    
            MR_name=mrName.getText();
            Company_data=jComboBox1.getItemAt(jComboBox1.getSelectedIndex());
            MR_phone=Mrphone.getText();
            MR_address=address.getText();
        
        ch=MR.Mr_info(MR_name,Company_data,MR_phone, MR_address);  //QueryProcess class
        if(ch==1){
             JOptionPane.showMessageDialog(null, "MR_Profile is Successfull!");
             this.setVisible(false);
        }
        else{
            JOptionPane.showMessageDialog(null, "MR_Profile is  Not Successfull!");
        }
    }                                        

