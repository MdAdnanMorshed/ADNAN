    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String Name=name.getText();
        String Qun=qun.getText();
        
        int pes=Integer.parseInt(Qun);
       String tk="30";
      int convert_tk=Integer.parseInt(tk);
      
      total_taka=total_taka+convert_tk;
      
        System.out.println("Total"+total_taka);
        
         try{
        Class.forName("com.mysql.jdbc.Driver");
         Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","",""); 
             
            String queryIn="insert into temp"+"(Product_Name,Product_Quntity,Total_tk)"+"values(?,?,?)";
            PreparedStatement st=con.prepareStatement(queryIn);
            st.setString(1,Name);
            st.setString(2,Qun);
            st.setString(3,tk);
           
            
            
            st.executeUpdate();
          msg.setText("data add Successfull!");
          totalqun=totalqun+pes;
          
          jTextField1.setText(Integer.toString(totalqun));
          
           jTextField2.setText(Integer.toString(total_taka));
         Display();
         
         
         
            
        }catch(Exception e){System.out.println("error:"+e);}
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
      try{
      Class.forName("com.mysql.jdbc.Driver");
         Connection test = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","",""); 
         
         //String queryIn="delete * temp";
          String queryIn="DELETE FROM `temp`";
            
            PreparedStatement st=test.prepareStatement(queryIn);
         st.executeUpdate();
          msg.setText("Delete are Successfull!"); 
          Display();
      }catch(Exception ex ){
          System.out.println("error"+ex);
      }
    }                                        

