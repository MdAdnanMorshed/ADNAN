package database_connection;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
public class QueryProcess {
    
    private String Query;
    private int ch;
    private static Connection connection =null;
    private String Admin_user;
    private String Admin_password;
    
    private String  itemName,company;
    private int Qty,pri,total;
    private String delId; 
    
    private String mrName,mrcompnay,mrphone,mraddress,mrid;
    
    
//****************************Database Connection  ***************************** 
    public QueryProcess(){
        try{
            connection=DatabaseCon.Database();
            System.out.println("Database Connection is Successfull!");
        }     
        catch(Exception e){System.out.println("Database Conection Faild!"+e);}
    }
    
   //************ Admin Login  *************************************************
    
    public int Admin_login(String user,String password) {
     String loginQuery;
     int ch=0;
        
     this.Admin_user=user;
     this.Admin_password=password;
     
     try{
        Statement st = connection.createStatement();
        loginQuery="Select * from login";
        ResultSet Rs=st.executeQuery(loginQuery);
        
        while(Rs.next()){
            String dbname=Rs.getString("name");
                String dbpass=Rs.getString("pass");
          
              if(dbname.equals(Admin_user)&& dbpass.equals(Admin_password)){
                ch=1;
              }
         }
      connection.close();
     }
     catch(SQLException  e){System.out.println("Login  Wrong"+e);}
         return ch;
    }

    //***************************** Login password Changes ********************
      
    public void login_pass_change(){}
    
    //**************************** Product Catagory ******************************
    
    public int Item_add(String iName,String icompany,int iqty,int iprice,int itotal){
        this.itemName=iName;
        this.company=icompany;
        this.Qty=iqty;
        this.pri=iprice;
        this.total=itotal;
        
        try{
        
          String queryIn="insert into stock"
                    +"(Product_name,Company,Quntity,Price,total_price)"
                    +"values(?,?,?,?,?)";
         
            PreparedStatement st=connection.prepareStatement(queryIn);
            ch=1;
           // st.setString(1,Code);        
            st.setString(1,itemName);
            st.setString(2,company );
            st.setInt(3,Qty);
            st.setInt(4, pri);
            st.setInt(5, total);
            
            st.executeUpdate();
        }
        catch(Exception e){System.out.println("error");}
    return ch;
    }
     
   //********************* Item Remove *****************************************
    
    public int Item_remove(String item_id){
        this.delId=item_id;
        try{
            String queryIn="Delete from stock where Id=?";
            PreparedStatement st=connection.prepareStatement(queryIn);
            st.setString(1,delId);
            
            st.executeUpdate();
            ch=1;  
        }
        catch(Exception e )   {System.out.println("Error");}
        
        return ch;
    }
    
    //****************** Item Update *******************************************
    
    public void Item_edit(){}
    
    //**************** Mr_Profile Add*******************************************
    
    public int Mr_info(String mName,String mcompany,String mphone,String maddress){
    this.mrName=mName;
    this.mrcompnay=mcompany;
    this.mrphone=mphone;
    this.mraddress=maddress;
       
    try{
        String queryIn="insert into mr_info"
                    +"(MR_Name,Company,Phone,Address,Payment_tk,paid_tk,Due)"
                    +"values(?,?,?,?,0,0,0)";
         
            PreparedStatement st=connection.prepareStatement(queryIn);
          
            st.setString(1,mrName);
            st.setString(2,mrcompnay);
             st.setString(3,mrphone);        
            st.setString(4,mraddress);
          
            st.executeUpdate();
            ch=1;
    }
        catch( Exception e){System.out.println("Error"+e);}
    return ch;
    }
       
    //*****************  MR  profile Remove  **********************************
    
    public int Mr_remove(String mid){
        this.mrid=mid;
        
    try{
        Query="Delete from mr_info where Id=?";
        PreparedStatement st=connection.prepareStatement(Query);
        st.setString(1,mrid);
        st.executeUpdate();
            ch=1;
        }
         catch(Exception ex){System.out.println("error:"+ex);}   
        return  ch;   
  }
 
    
}//end 

