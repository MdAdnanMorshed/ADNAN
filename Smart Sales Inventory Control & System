    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

      int match=ch();
       
     String user,pass,confrim;
      
      user=User_name.getText();
      pass=U_Password.getText();
      confrim = U_Password.getText();
        
       if(match==1){
           try{
              Class.forName("com.mysql.jdbc.Driver");
             Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","","");
             String query_update="update login  set name=?,pass=? where pass";
             PreparedStatement st_up=con.prepareStatement(query_update);
             
             st_up.setString(1, user);
             st_up.setString(2, pass);
             st_up.executeUpdate();
            
             JOptionPane.showMessageDialog(null, "New password is createded!"); 
             con.close();
             st_up.close();
           }
          catch(Exception ex){System.out.println("Error"+ex);}     
       }
       else{
         JOptionPane.showMessageDialog(null, "New password is not Successfull!"); 
        } 

    }                                        

