    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
         String pro_name,quntity,company,price,code;
         
         pro_name=P_name.getText();
         company=Company.getText();
         quntity= Quntity.getText();
         
         price=Price.getText();
         code=Code.getText();
         
         int qun=Integer.parseInt(quntity);
         int pri=Integer.parseInt(price);
         
         int total=qun*pri;
         
        try {
           Class.forName("com.mysql.jdbc.Driver");
         Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","","");
            String queryIn="update stock set Product_name=?,Company=?,Quntity=?,Price=?,total_price=? where Id=?";
         
            PreparedStatement st=con.prepareStatement(queryIn);
            
                   
            st.setString(1,pro_name);
            st.setString(2,company);
            st.setInt(3, qun);
            st.setInt(4, pri);
             
            st.setInt(5, total);
           st.setString(6, code);
           
            st.executeUpdate();
          JOptionPane.showMessageDialog(null, "Data Updated Successfull!");
          this.setVisible(false);
        }
        catch(Exception ex){
         System.out.println("Error:"+ex);
        }
        
        
    }                                        

