    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        String com=jTextField1.getText();
        try{
        Class.forName("com.mysql.jdbc.Driver");
         Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","",""); 
             
            String queryIn="insert into item_catagory"+"(Item_list)"+"values(?)";
            PreparedStatement st=con.prepareStatement(queryIn);
            st.setString(1,com);        
            
            st.executeUpdate();
           jLabel3.setText("data add Successfull!");
           jTextField1.setText(" ");
           
             
        }catch(Exception e){System.out.println("error:"+e);}
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
//        new ControlBroad().setVisible(true);
        this.setVisible(false);
    }                                        

