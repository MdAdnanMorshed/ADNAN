package database_connection;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import javax.swing.JOptionPane;

/**
 *
 * @author Adnan
 */
public class MRProfile extends javax.swing.JFrame {
    QueryProcess MR=new QueryProcess();
    
    /**
     * Creates new form MRProfile
     */
    public MRProfile() {
        initComponents();
        com();
    }
public void  com(){
 try{
           Class.forName("com.mysql.jdbc.Driver");
           Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/test","",""); 
           String  lit_query="select * from company";
           PreparedStatement Stat=conn.prepareStatement(lit_query);
           ResultSet rs = Stat.executeQuery(lit_query);
           while(rs.next()){
           String com=rs.getString("Company");
           jComboBox1.addItem(com);
         }
        }catch(Exception e){System.out.println("error:"+e);}


}

